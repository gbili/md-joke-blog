{
  "name": "nodejs-simplest-blog",
  "version": "1.0.0",
  "description": "Simple Nodejs ES6 (Babel), Mocha/Chai Blog",
  "main": "build/index.js",
  "scripts": {
    "clean": "rm -fr ./build/*",
    "prebuild": "npm run clean",
    "makeconfig": "rm -f ./config/post-list.json && rm -f ./config/static-file-list.json && babel-node ./src/config/generate.js && babel ./config/global.js --out-file ./config/global-built.js",
    "build": "npm run makeconfig && babel -d ./build ./src",
    "test": "mocha --require @babel/register --recursive",
    "develop": "npm run makeconfig && nodemon --exec babel-node ./src/index.js",
    "serve": "node ./build/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/gbili/nodeblog.git"
  },
  "keywords": [
    "nodejs",
    "nodemon",
    "mocha",
    "chai",
    "es6",
    "babel",
    "skeleton"
  ],
  "author": "Guillermo Pages <mail@guillermo.at> (https://guillermo.at)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gbili/nodeblog/issues"
  },
  "homepage": "https://github.com/gbili/nodeblog#readme",
  "devDependencies": {
    "@babel/cli": "7.4.4",
    "@babel/core": "7.4.5",
    "@babel/node": "7.4.5",
    "@babel/preset-env": "7.4.5",
    "@babel/register": "7.4.4",
    "chai": "4.2.0",
    "github-markdown-css": "3.0.1",
    "marked": "0.6.2",
    "mime-types": "2.1.24",
    "mocha": "6.1.4",
    "nodemon": "1.19.1",
    "prismjs": "1.16.0"
  },
  "dependencies": {
    "primap": "1.0.0",
    "recursive-readdir": "^2.2.2"
  },
  "directories": {
    "test": "test"
  }
}
