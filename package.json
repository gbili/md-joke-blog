{
  "name": "nodejs-simplest-blog",
  "version": "1.0.0",
  "description": "Simple Nodejs ES6 (Babel), Mocha/Chai Blog",
  "main": "build/index.js",
  "scripts": {
    "test": "mocha --require @babel/register --recursive",
    "config:prebuild": "rm -fr ./config-dist",
    "config:build": "npm run config:prebuild && babel config --out-dir config-dist",
    "clean": "rm -fr ./dist/*",
    "prebuild": "npm run clean && npm run config:build",
    "build": "babel src --out-dir dist",
    "postbuild": "node ./dist/config/generate.js && cp -fR ./src/view ./dist/",
    "serve": "NODE_ENV=production node ./dist/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/gbili/nodeblog.git"
  },
  "keywords": [
    "nodejs",
    "nodemon",
    "mocha",
    "chai",
    "es6",
    "babel",
    "skeleton"
  ],
  "author": "Guillermo Pages <mail@guillermo.at> (https://guillermo.at)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gbili/nodeblog/issues"
  },
  "homepage": "https://github.com/gbili/nodeblog#readme",
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.5",
    "@babel/plugin-transform-runtime": "^7.4.4",
    "@babel/preset-env": "7.4.5",
    "@babel/register": "^7.4.4",
    "@babel/runtime": "^7.4.5",
    "chai": "4.2.0",
    "front-matter": "^3.0.2",
    "github-markdown-css": "3.0.1",
    "marked": "0.6.2",
    "mime-types": "2.1.24",
    "mocha": "6.1.4",
    "nodemon": "^1.19.1",
    "prismjs": "1.16.0"
  },
  "dependencies": {
    "primap": "1.0.0",
    "recursive-readdir": "^2.2.2"
  },
  "directories": {
    "test": "test"
  }
}
